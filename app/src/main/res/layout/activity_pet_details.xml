<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/detail_pets_images"
            android:name="com.intive.toz.petDetails.view_pager.PetImgFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/detail_pets_fragment"
            android:name="com.intive.toz.petDetails.details_fragment.PetDetailsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_help"
            android:layout_marginTop="@dimen/separator_margin_bottom_top"
            android:layout_below="@id/detail_pets_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pet_detail_button"
            android:textColor="@color/whiteText"
            android:background="@color/colorAccent"/>

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>
    </LinearLayout>

</ScrollView>
