<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_pet_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/fragment_container_img"
            android:layout_width="match_parent"
            android:layout_height="202dp" />

        <fragment
            android:id="@+id/detail_pets_fragment"
            android:name="com.intive.toz.petDetails.view.PetDetailsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_container_img" />

        <Button
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_pets_fragment"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_orange"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:text="@string/pet_detail_button"
            android:textColor="@color/whiteText" />

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_help"
            android:orientation="vertical" />
    </RelativeLayout>

</ScrollView>
