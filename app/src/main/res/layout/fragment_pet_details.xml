<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="202dp" />

            <ImageButton
                android:id="@+id/left_nav"
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:layout_gravity="center_vertical|start"
                android:layout_marginLeft="@dimen/arrow_margin_left_right"
                android:layout_marginStart="@dimen/arrow_margin_left_right"
                android:background="#00000000"
                android:src="@drawable/arrow_left_nav" />

            <ImageButton
                android:id="@+id/right_nav"
                android:layout_width="@dimen/arrow_size"
                android:layout_height="@dimen/arrow_size"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/arrow_margin_left_right"
                android:layout_marginRight="@dimen/arrow_margin_left_right"
                android:background="#00000000"
                android:src="@drawable/arrow_right_nav" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:id="@+id/name_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_pet_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/pet_detail_name"
                            android:textColor="@color/greyDark" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/separator1"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/separator_margin_bottom_top"
                    android:layout_marginTop="@dimen/separator_margin_bottom_top"
                    android:background="@color/greyLight" />

                <LinearLayout
                    android:id="@+id/type_sex_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/type_pet_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/pet_detail_type"
                            android:textColor="@color/greyText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/distance_left_right_text"
                        android:layout_marginRight="@dimen/distance_left_right_text"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sex_pet_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/pet_detail_sex"
                            android:textColor="@color/greyText" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/separator2"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/separator_margin_bottom_top"
                    android:layout_marginTop="@dimen/separator_margin_bottom_top"
                    android:background="@color/greyLight" />

                <LinearLayout
                    android:id="@+id/date_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/date_pet_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/pet_detail_date_add"
                            android:textColor="@color/greyDark" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/separator3"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/separator_margin_bottom_top"
                    android:layout_marginTop="@dimen/separator_margin_bottom_top"
                    android:background="@color/greyLight" />

                <TextView
                    android:id="@+id/description_pet_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_orange"
                    android:shadowRadius="@android:integer/config_longAnimTime"
                    android:text="@string/pet_detail_button"
                    android:textColor="@color/whiteText" />

                <FrameLayout
                    android:id="@+id/help_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_text_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_transfer_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/space_between_segment"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/tv_org_name_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_city_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_street_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/space_between_segment"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nr_acc_help"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/space_between_segment"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/acc_nr_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progress_bar_pet_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                </FrameLayout>

                <View
                    android:id="@+id/separator4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="@dimen/separator_margin_bottom_top"
                    android:layout_marginTop="@dimen/separator_margin_bottom_top"
                    android:background="@color/greyLight" />

                <LinearLayout
                    android:id="@+id/comments_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/comments"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:id="@+id/add_comment_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/add_comment_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/add_comment"
                                android:paddingEnd="58dp"
                                android:paddingRight="58dp" />

                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:id="@+id/add_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:text="@string/add"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="@dimen/separator_margin_bottom_top"
                        android:layout_marginTop="@dimen/separator_margin_bottom_top"
                        android:background="@color/greyLight" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/comments_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>


                <ProgressBar
                    android:id="@+id/progress_bar_pet_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>