<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    tools:context="com.intive.toz.account.ChangePasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/input_old_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/old_password_hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/old_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/auth_old_password_error"
                android:layout_marginLeft="@dimen/activity_login_margin_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_small_margin"
                android:layout_alignParentLeft="true"
                android:text="@string/auth_username_error"
                android:textColor="@color/errorColor"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/auth_old_password_icon_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_report_problem_black_24dp"
                android:tint="@color/errorColor"
                android:visibility="invisible"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_password_hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/new_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/activity_login_margin_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_small_margin"
                android:layout_alignParentLeft="true"
                android:text="@string/auth_username_error"
                android:textColor="@color/errorColor"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/new_password_icon_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_report_problem_black_24dp"
                android:tint="@color/errorColor"
                android:visibility="invisible"/>

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_repeat_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearance.TextInputLayout.Color">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_repeat_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/repeat_new_password_hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:id="@+id/repeat_new_password_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/activity_login_margin_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_small_margin"
                android:layout_alignParentLeft="true"
                android:text="@string/auth_username_error"
                android:textColor="@color/errorColor"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/repeat_new_password_icon_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_report_problem_black_24dp"
                android:tint="@color/errorColor"
                android:visibility="invisible"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/confirm_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_change_password"/>

            <Button
                android:id="@+id/cancel_change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_change_password"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
