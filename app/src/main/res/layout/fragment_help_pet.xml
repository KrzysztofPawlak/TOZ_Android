<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.intive.toz.petDetails.view.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_text_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_transfer_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/space_between_segment" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_org_name_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_city_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_street_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/space_between_segment" />

        <TextView
            android:layout_marginBottom="@dimen/space_between_segment"
            android:textColor="@color/black"
            android:id="@+id/tv_nr_acc_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="@dimen/acc_nr_text_size"
            android:textAlignment="center" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar_pet_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
