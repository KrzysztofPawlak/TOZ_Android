    android:layout_height="match_parent"
    tools:context="com.intive.toz.petDetails.page_view_images.PetImagesFragment">

    <ImageView
        android:id="@+id/iv_pet_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
