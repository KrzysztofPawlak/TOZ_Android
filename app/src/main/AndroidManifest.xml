<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intive.toz">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TozApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainTheme.Base">
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".info.view.FinancialActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".petDetails.PetDetailsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".news_detail.view.NewsDetailActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".account.ChangePasswordActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_change_password"/>
        <activity
            android:name=".volunteerForm.VolunteerFormActivity"
            android:theme="@style/AppTheme"
            android:label="@string/title_activity_volunteer_form"
            />
        <activity
            android:name=".kindOfHelp.KindOfHelpActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainActivity"></activity>

    </application>

</manifest>